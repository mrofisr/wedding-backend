generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Wish {
  id        Int             @id @default(autoincrement())
  name      String
  message   String
  timestamp DateTime        @default(now())
  attending AttendingStatus
}

enum AttendingStatus {
  ATTENDING
  NOT_ATTENDING
  MAYBE
}
